package pacote;

public class Media {

	public static void main(String[] args) {
		
		int nota1 = 5;
		int nota2 = 2;
		int nota3 = 8;
		int nota4 = 6;
		int media;
		
		media = (nota1 + nota2 + nota3 + nota4) /4;
		
		System.out.println("MEDIA:" + media);
		
		if (media > 7) {
			
			System.out.println("APROVADO");
		
		}else if (media >= 5) {
			
			System.out.println("RECUPERAÇÃO");
		
		}else {
			
			System.out.println("REPROVADO");
		}
		
		
	
	
	}

}
